<section>
        <div class="col m-3 mt-4">
            <table class="table" id="productTable">
                <thead>
                    <tr>
                        <th scope="col">index.no</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col"><a href="admin/add-product" class="btn btn-primary">Add-Product</a></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.name}}</td>
                        <td>â‚¹{{this.price}}</td>
                        <td><img src="{{this._id}}.jpg" alt="{{this._id}}" width="60px" height="60px"></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">Edit</a>
                            <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure? \n\n Delete!! {{this.name}}!!')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
</section>