<section>
    <div class="container">
        <form class="row g-3" id="checkout" method="post">
            <div class="col-7 mt-5">
                <div class="col-md-12">
                    <h2>Enter Delivery Details</h2>
                    <label for="inputAddress" class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" id="Address" placeholder="1234 Main St">
                </div>
                <div class="col-md-8">
                    <label for="inputCity" class="form-label">Phone number</label>
                    <input type="tel" name="phone" class="form-control" id="number">
                </div>
                <div class="col-md-8">
                    <label for="inputCity" class="form-label">Landmark</label>
                    <input type="text" name="landmark" class="form-control" id="landmark">
                </div>
                <div class="col-md-6">
                    <label for="inputZip" class="form-label">Pin code</label>
                    <input type="text" name="pincode" class="form-control" id="pincode">
                </div>
            </div>
            <div class="col-md-4 mt-5 py-3">
                <div class="right-content px-4">
                    <h4 class="mt-3">Total Amount:â‚¹{{totalAmount}}</h4>
                    <input value="{{user._id}}" name="user" hidden>
                    <hr>
                    <p>Payment Method</p>
                    <input type="radio" name="paymentMethod" value="cod" id="cod" checked>
                    <label for="cod">COD</label>
                    <br>
                    <input type="radio" name="paymentMethod" value="online" id="online">
                    <label for="online">Online payment</label>
                    <br>
                    <div class="check-out">
                        <button class="btn btn-info mt-1" >Check out</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section> 