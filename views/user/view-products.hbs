                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">â‚¹{{this.price}}</p>
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
