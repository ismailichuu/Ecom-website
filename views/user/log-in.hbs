<section>
    <form action="/admin/admin-login" method="post">
        <h2 class="text-center m-5">Log In</h2>
        <div class="container">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" name="email" class="form-control" id="inputEmail3">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input type="password"  name="password" class="form-control" id="inputPassword3">
                </div>
            </div>
             {{#if loginErr}}
                    <p class="error text-danger text-center">{{this.loginErr}}</p>
                {{/if}}
            <div class="row mb-3 " style="padding-left: 12rem;">
                <a href="/sign-up" class="text-decoration-none" >don't have an account?</a>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4 py-2">Sign in</button>
            </div>
        </div>
    </form>
</section>